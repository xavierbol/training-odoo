<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="army_view_tree" model="ir.ui.view">
        <field name="name">Army Tree</field>
        <field name="model">kingdom.army</field>
        <field name="arch" type="xml">
            <tree string="Army List">
                <field name="commander"/>
                <field name="infantry_count"/>
                <field name="cavalry_count"/>
            </tree>
        </field>
    </record>
    
    <record id="army_action" model="ir.actions.act_window">
        <field name="name">Army</field>
        <field name="res_model">kingdom.army</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>