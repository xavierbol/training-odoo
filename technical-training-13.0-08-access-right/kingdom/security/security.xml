<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_kingdom" model="ir.module.category">
        <field name="name">Kingdom</field>
    </record>
    
    <record id="group_citizens" model="res.groups">
        <field name="name">Citizens</field>
        <field name="category_id" ref="module_category_kingdom"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_advisers" model="res.groups">
        <field name="name">Advisors</field>
        <field name="category_id" ref="module_category_kingdom"/>
        <field name="implied_ids" eval="[(4, ref('group_citizens'))]"/>
    </record>
    
    <record id="group_royals" model="res.groups">
        <field name="name">Royals</field>
        <field name="category_id" ref="module_category_kingdom"/>
        <field name="implied_ids" eval="[(4, ref('group_advisers'))]"/>
    </record>
    
    <record id="only_advisors_can_access" model="ir.rule">
        <field name="name">Only advisors can read all data</field>
        <field name="model_id" ref="model_kingdom_city"/>
        <field name="groups" eval="[(4, ref('kingdom.group_advisers'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    
    <record id="only_advisors_can_access" model="ir.rule">
        <field name="name">Only royals can access all data</field>
        <field name="model_id" ref="model_kingdom_city"/>
        <field name="groups" eval="[(4, ref('kingdom.group_royals'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
    
    <record id="only_advisors_can_read" model="ir.rule">
        <field name="name">Only advisors can read all data</field>
        <field name="model_id" ref="model_kingdom_army"/>
        <field name="groups" eval="[(4, ref('kingdom.group_advisers'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    
    <record id="only_royals_can_access" model="ir.rule">
        <field name="name">Only royals can access all data</field>
        <field name="model_id" ref="model_kingdom_army"/>
        <field name="groups" eval="[(4, ref('kingdom.group_royals'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>