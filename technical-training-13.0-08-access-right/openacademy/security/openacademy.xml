<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_openacademy" model="ir.module.category">
        <field name="name">Open Academy</field>
    </record>
    
    <record id="group_openacademy_student" model="res.groups">
        <field name="name">Student: his course only</field>
        <field name="category_id" ref="module_category_openacademy"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">The student will have access to his own course in the openacademy application</field>
    </record>
    
    <record id="group_openacademy_maester" model="res.groups">
        <field name="name">Maester: his course only</field>
        <field name="category_id" ref="module_category_openacademy"/>
        <field name="implied_ids" eval="[(4, ref('group_openacademy_student'))]"/>
        <field name="comment">The maeter will have access to his own course in the openacademy application</field>
    </record>
    
    <record id="group_openacademy_archmaester" model="res.groups">
        <field name="name">Archmaesters</field>
        <field name="category_id" ref="module_category_openacademy"/>
        <field name="implied_ids" eval="[(4, ref('group_openacademy_maester'))]"/>
        <field name="comment">The admin will have access to all data in the openacademy application</field>
    </record>
    
    <record id="only_responsible_can_modify" model="ir.rule">
        <field name="name">Only Responsible can modify Course</field>
        <field name="model_id" ref="model_openacademy_course"/>
        <field name="groups" eval="[(4, ref('openacademy.group_openacademy_maester'))]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">
            [('responsible_id','=',user.id)]
        </field>
    </record>

    <record id="admin_rule" model="ir.rule">
        <field name="name">Archmaesters Can do everything</field>
        <field name="model_id" ref="model_openacademy_course"/>
        <field name="groups" eval="[(4, ref('openacademy.group_openacademy_archmaester'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">
            [(1, '=', 1)]
        </field>
    </record>
</odoo>
