<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_view_tree" model="ir.ui.view">
        <field name="name">partner.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Contacts">
                    <field name="display_name" string="Name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="is_author"/>
                    <field name="is_publisher"/>
                    <field name="active" invisible="1"/>
                </tree>
        </field>
    </record>

    <record id="partner_view_from" model="ir.ui.view">
        <field name="name">partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <page name="sales_purchases" position="after">
                <page string="Library">
                    <group>
                        <group string="General">
                            <field name="is_author"/>
                            <field name="is_publisher"/>
                        </group>
                    </group>
                    <group>
                        <field name="old_rental_ids"/>
                        <field name="current_rental_ids"/>
                        <field name="qty_lost_book" attr="{'invisible': [('qty_lost_book', '=', 0)]}"/>
                        <field name="lost_rental_ids" attr="{'invisible': [('qty_lost_book', '=', 0)]}"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="partner_action" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('customer', '=', True)]</field>
    </record>

    <record id="publisher_action" model="ir.actions.act_window">
        <field name="name">Publishers</field>
        <field name="res_model">res.partner</field>
        <field name="domain">[('is_publisher', '=', True)]</field>
    </record>
</odoo>