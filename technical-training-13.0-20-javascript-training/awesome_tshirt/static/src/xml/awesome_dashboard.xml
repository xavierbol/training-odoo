<templates id="template" xml:space="preserve">
    <div t-name="AwesomeDashboard" class="o_awesome_tshirt_dashboard">
        <div class="o_content">
            <div class="o_statistics">
                <span><t t-esc="widget.text.nb_new_orders"/> <t t-esc="widget.stats.nb_new_orders"/></span><br/>
                <span><t t-esc="widget.text.total_amount"/> <t t-esc="widget.stats.total_amount"/></span><br/>
                <span><t t-esc="widget.text.average_quantity"/> <t t-esc="widget.stats.average_quantity" /></span> <br/>
                <span><t t-esc="widget.text.nb_cancelled_quantity"/> <t t-esc="widget.stats.nb_cancelled_quantity" /></span><br/>
                <span><t t-esc="widget.text.average_time"/> <t t-esc="widget.stats.average_time" /></span>
            </div>
            <div class="o_chart"/>
        </div>
    </div>

    <div t-name="AwesomeDashboard.Buttons">
        <button class="btn btn-primary o_customers_btn">Customers</button>
        <button class="btn btn-primary o_new_orders_btn">New Orders</button>
        <button class="btn btn-primary o_cancelled_orders_btn">Cancelled Orders</button>
    </div>
</templates>