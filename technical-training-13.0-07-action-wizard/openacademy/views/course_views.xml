<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="course_view_list" model="ir.ui.view">
        <field name="name">openacademy.course.tree</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="level"/>
            </tree>
        </field>
    </record>

    <record id="course_view_form" model="ir.ui.view">
        <field name="name">openacademy.course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                        <field name="level"/>
                    </group>
                    <button class="oe_stat_button" type="object"
                            name="open_attendees" icon="fa-calendar">
                        <div class="o_stat_info">
                            <field name="attendee_count" class="o_stat_value"/>
                            <span class="o_stat_text" attrs="{'invisible': [('attendee_count', '&lt;', 2)]}">Attendees</span>
                            <span class="o_stat_text" attrs="{'invisible': [('attendee_count', '&gt;', 1)]}">Attendee</span>
                        </div>
                    </button>
                    <notebook>
                        <page string="Description" name="desc">
                            <field name="description"/>
                        </page>
                        <page string="Sessions" name="sessions">
                            <field name="session_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="percentage_per_day"/>
                                    <field name="seats"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                    
            </form>
        </field>
    </record>

    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>