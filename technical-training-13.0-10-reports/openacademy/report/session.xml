<?xml version="1.0"?>
<odoo>
    <report id="action_openacademy_session_report"
            string="Session report"
            model="openacademy.session"
            report_type="qweb-html"
            name="openacademy.report_session_template"
            file="openacademy.report_session"
    />
    
    <template id="report_session_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="container">
                        <div class="row bg-primary">
                            <div class="col-3">Session</div>
                            <div class="col-3">Cours</div>
                            <div class="col-2">Instructor_id</div>
                            <div class="col-2">Start Date</div>
                            <div class="col-2">Responsible</div>
                        </div>
                        <t t-foreach="docs" t-as="o">
                            <div class="col-3">
                                <h4><span t-field="o.name"/></h4>
                            </div>
                            <div class="col-3">
                                <span t-field="o.course_id"/>
                            </div>
                            <div class="col-2">
                                <span t-field="o.instructor_id"/>
                            </div>
                            <div class="col-2">
                                <span t-field="o.start_date"
                                      t-options="{'widget': 'date'}"/>
                            </div>
                            <div class="col-2">
                                <span t-field="o.reponsible_id"/>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>